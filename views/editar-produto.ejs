                    <div class="formulario">
                        <span class="titulo p-2 d-flex justify-content-center">Editar Produto</span>
                        <form action="" method="post">
                            <fieldset class="border p-2">
                                <legend class="small legenda">digite o nome do produto</legend>
                                <input type="text" class="form-control" name="nome" id=""
                                    placeholder="Informe o nome do produto" value="Maçã">
                                    
                            </fieldset>

                            <fieldset class="border p-2">
                                <legend class="small legenda">digite a quantidade do produto</legend>
                                <input type="number" class="form-control" name="quantidade" id=""
                                    placeholder="Informe a quantidade do produto" value="20">
                                    
                            </fieldset>

                            <fieldset class="border p-2">
                                <legend class="small legenda">Selecione uma Imagem para o produto</legend>
                                <input type="file" class="form-control" name="imagem" id="">
                                    
                            </fieldset>

                            <fieldset class="border p-2">
                                <legend class="small legenda">Selecione a Categoria do produto</legend>
                                <select name="" class="form-select" id="">
                                    <optgroup label="Frutas">
                                        <option value="Banana">Banana</option>
                                        <option value="Uva">Uva</option>
                                        <option value="maca" selected>Maçã</option>
                                    </optgroup>
                                    <optgroup label="Limpeza">
                                        <option value="sabao-em-po">Sabão em pó</option>
                                        <option value="Amaciante">Amaciante</option>
                                        <option value="agua-sanitaria">Água Sanitária</option>
                                    </optgroup>
                                </select>
                                    
                            </fieldset>

                            <div class="d-flex justify-content-center mb-2 mt-2">
                                <button type="submit" class="botao btn btn-success text-center">Editar</button>
                                <button type="submit" class="botao btn btn-outline-danger text-center">Limpar</button>
                            </div>
